@model First_PRO.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["UserNumber"] = ViewBag.userIdValue;

    ViewData["UserImage"] = ViewBag.UserImagePath;
    ViewData["Username"] = ViewBag.Username;


}

<h1 class="m-3">Delete</h1>

<h5 class="m-3">Are you sure you want to delete this?</h5>




<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.ImagePath)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ImagePath)
                </dd>
            </dl>
            <form asp-action="DeleteCat">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
                <a asp-action="Categories" class="btn btn-outline-primary">Back to List</a>
            </form>
        </div>
    </div>
</div>
