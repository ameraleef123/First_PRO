@model IEnumerable<First_PRO.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["UserNumber"] = ViewBag.userIdValue;

    ViewData["UserImage"] = ViewBag.UserImagePath;
    ViewData["Username"] = ViewBag.Username;


}

<h1> Category</h1>

<p>
    <a class="btn btn-outline-success" asp-action="CreateCat">Create New</a>
</p>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Category Name
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImagePath) @*Image Path*@
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        <img src="@Url.Content("~/Images/" + item.ImagePath)" asp-append-version="true" style="border-radius:20%;"  />
                                    </td>

                                    <td>

                                        <a class="btn btn-outline-primary" asp-action="EditCat" asp-route-id="@item.Id">Edit</a> |
                                        <a class="btn btn-outline-primary" asp-action="DetailsCat" asp-route-id="@item.Id">Details</a> |
                                        <a class="btn btn-outline-primary" asp-action="DeleteCat" asp-route-id="@item.Id">Delete</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
