@model IEnumerable<First_PRO.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ChefLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Order Status</h4>
                <div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath) @*Image Path*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <img src=@Url.Content("~/Images/" + item.ImagePath)
                         asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
                </td>
                <td>
                    
                    <a class="badge badge-outline-warning" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        <a class="badge badge-outline-warning" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        <a class="badge badge-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                    
                </td>
            </tr>
        }
    </tbody>
</table>
                </div>
            </div>
        </div>
    </div>
</div>
